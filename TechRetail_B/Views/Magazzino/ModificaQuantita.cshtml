<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    @model TechRetail_B.Models.ModificaQuantitaViewModel

    <h2>Modifica Quantità</h2>

    <form method="post" action="@Url.Action("SalvaQuantita", "Magazzino")">
        <input type="hidden" name="idProdotto" value="@Model.IdProdotto" />
        <input type="hidden" name="idFiliale" value="@Model.IdFiliale" />

        <div>
            <label>Quantità:</label>
            <input type="number" name="quantita" value="@Model.QuantitaAttuale" min="0" required />
        </div>

        <button type="submit">Salva</button>
    </form>

</body>
</html>