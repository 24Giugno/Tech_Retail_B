@using TechRetail_B.Models
@model TechRetail_B.Models.ProdottoViewModel
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scheda Tecnica</title>
    <link rel="stylesheet" href="~/css/SchedaTecnica/styles.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato|Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <!-- Navbar -->
    <button class="toggleNavBtn" onclick="toggleNavbar()">
        <span id="navIcon">☰</span>
    </button>
    <div class="Navbar" id="Navbar">
        <div class="navButtons">
            <a href="~/Dashboard/IndexDashBoard/@Model.UtenteLoggato.Id">Dashboard</a>
            <a href="~/Filiali/Index/@Model.UtenteLoggato.Id">Negozi</a>
            <a href="~/Magazzino/Index/@Model.UtenteLoggato.Id">Magazzino</a>
            <a href="#">Comunicazioni</a>
        </div>
        <a href="~/Login/Logout"> Log Out</a>
    </div>

    <!-- Header -->
    <header class="Header">
        <div class="infoHeader">
            <img src="~/immagini/logo.png" alt="Logo Tech Retail SpA" height="200px">
            <div class="Inventory">
                <h1 style="color: #eb921c;">@Model.UtenteLoggato._Filiale.Indirizzo</h1>
                <button class onclick="window.location.href='/Inventario/Inventario.html'">Vai all'Inventario</button>
            </div>
            <h1 class="utente" style="color: #eb921c; font-size: 25px;">@Model.UtenteLoggato.Nome @Model.UtenteLoggato.Cognome</h1>
        </div>
    </header>
    <!-- scheda tecnica-->
    @if (Model.UtenteLoggato.Ruolo == "admin")
    {
        <form method="get" action="@Url.Action("Index", "Restock")">
            <input type="hidden" name="idUtente" value="@Model.UtenteLoggato.Id" />
            <input type="hidden" name="prodottoId" value="@Model.Prodotto.Id" />
            <input type="hidden" name="nome" value="@Model.Prodotto.Nome" />
            <input type="hidden" name="prezzo" value="@Model.Prodotto.Prezzo" />
            <button type="submit" class="restock-btn">Restock</button>
        </form>
    }

    <div style="display: flex;justify-content: center;">
        <div class="container">
            <div class="product-details">
                <h2>Scheda Tecnica del Prodotto</h2>
                <table>
                    <tr>
                        <th>Nome del Prodotto</th>
                        <td>@Model.Prodotto.Nome</td>
                    </tr>
                    <tr>
                        <td>@Model.Prodotto.ImmagineURL</td>
                    </tr>

                    <tr>
                        <th>Prezzo</th>
                        <td>@Model.Prodotto.Prezzo</td>
                    </tr>
                    <tr>
                        <th>Descrizione</th>
                        <td>@Model.Prodotto.Descrizione</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <script src="~/js/SchedaTecnica/index.js"></script>
</body>
</html>